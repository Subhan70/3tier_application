pipeline {
    agent any

    tools {
        terraform "terraform"
        gcloud "gcloud"
    }

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        
        stage('Checkout Source Code') {
            steps {
                checkout scm
            }
        }

        stage('Gcloud authorization') {
            steps {
                withCredentials([file(credentialsId: 'gcp-service-account-key', variable: 'GCLOUD_SERVICE_ACCOUNT_CREDENTIALS')]) {
                    sh 'gcloud auth activate-service-account --key-file=${GCLOUD_SERVICE_ACCOUNT_CREDENTIALS}'
                }
            }
        }

        stage('Azure login') {
            steps {
                withCredentials([azureServicePrincipal('azure-credentials')]) {
                    sh 'az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID'
                }
            }
        }
        
        stage('Initialize Terraform') {
            steps {
                dir('./terraform') {
                    withAWS(credentials: 'aws-access-key-id', region: 'us-east-1') {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Format') {
            steps {
                script {
                    dir('./terraform') {
                        withAWS(credentials: 'aws-access-key-id', region: 'us-east-1') {
                            sh 'terraform fmt -check'
                        }
                    }
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                script {
                    dir('./terraform') {
                        withAWS(credentials: 'aws-access-key-id', region: 'us-east-1') {
                            sh 'terraform validate'
                        }
                    }
                }
            }
        }

        // stage('Remove states') {
        //     steps {
        //         dir('./terraform') {
        //             withAWS(credentials: 'aws-access-key-id', region: 'us-east-1') {
        //                 sh '''terraform state rm module.azure.module.vnet.azurerm_subnet.subnet_count[0]
        //                 terraform state rm module.azure.module.vnet.azurerm_subnet.subnet_count[1]
        //                 terraform state rm module.azure.module.vnet.azurerm_subnet.subnet_count[2]'''
        //             }
        //         }
        //     }
        // }

        stage('Import states') {
            steps {
                dir('./terraform') {
                    withAWS(credentials: 'aws-access-key-id', region: 'us-east-1') {
                        sh '''terraform import module.azure.module.vnet.azurerm_subnet.subnet_count[0] /subscriptions/176361ba-2bb1-4127-8a7c-e44b69794214/resourceGroups/MultiCloudThreeTier/providers/Microsoft.Network/virtualNetworks/three-tier-multicloud-vnet/subnets/subnet1
                        terraform import module.azure.module.vnet.azurerm_subnet.subnet_count[1] /subscriptions/176361ba-2bb1-4127-8a7c-e44b69794214/resourceGroups/MultiCloudThreeTier/providers/Microsoft.Network/virtualNetworks/three-tier-multicloud-vnet/subnets/subnet2
                        terraform import module.azure.module.vnet.azurerm_subnet.subnet_count[2] /subscriptions/176361ba-2bb1-4127-8a7c-e44b69794214/resourceGroups/MultiCloudThreeTier/providers/Microsoft.Network/virtualNetworks/three-tier-multicloud-vnet/subnets/subnet3
                        '''
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('./terraform') {
                    withAWS(credentials: 'aws-access-key-id', region: 'us-east-1') {
                        sh 'terraform plan -no-color -input=false -out planfile'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('./terraform') {
                    withAWS(credentials: 'aws-access-key-id', region: 'us-east-1') {
                        sh 'terraform apply -auto-approve -input=false -parallelism=1 planfile'
                    }
                }
            }
        }
    }
}